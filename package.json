{
  "name": "test-drive-react",
  "version": "1.3.0",
  "description": "Opinionated library for Test-Driven Development of React Components.",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "prebuild": "npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --outDir cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir esm --module esnext",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "pretest": "npm run typecheck && npm run lint",
    "test": "mocha-web \"./test/**/*.ts?(x)\"",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "react": ">=15.5.0",
    "react-dom": ">=15.5.0"
  },
  "dependencies": {
    "test-drive": "^1.5.0"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.45.1",
    "@types/chai": "^4.3.16",
    "@types/chai-dom": "^1.11.3",
    "@types/mocha": "^10.0.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "mocha": "^10.6.0",
    "mocha-web": "^1.0.2",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.0",
    "typescript": "~5.5.3"
  },
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wixplosives/test-drive-react.git"
  },
  "author": "Jiri Tobisek",
  "bugs": {
    "url": "https://github.com/wixplosives/test-drive-react/issues"
  },
  "homepage": "https://github.com/wixplosives/test-drive-react#readme",
  "license": "MIT"
}

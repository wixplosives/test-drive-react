{
  "name": "test-drive-react",
  "version": "1.3.0",
  "description": "Opinionated library for Test-Driven Development of React Components.",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "prebuild": "npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --outDir cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir esm --module esnext",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "pretest": "npm run typecheck && npm run lint",
    "test": "mocha-play \"./test/**/*.ts?(x)\"",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "react": ">=15.5.0",
    "react-dom": ">=15.5.0"
  },
  "dependencies": {
    "test-drive": "^1.3.0"
  },
  "devDependencies": {
    "@ts-tools/webpack-loader": "^5.0.2",
    "@types/chai": "^4.3.5",
    "@types/chai-dom": "^1.11.0",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "mocha": "^10.2.0",
    "mocha-play": "^6.0.0",
    "playwright-chromium": "^1.37.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "typescript": "~5.2.2",
    "webpack": "^5.88.2"
  },
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wixplosives/test-drive-react.git"
  },
  "author": "Jiri Tobisek",
  "bugs": {
    "url": "https://github.com/wixplosives/test-drive-react/issues"
  },
  "homepage": "https://github.com/wixplosives/test-drive-react#readme",
  "license": "MIT"
}
